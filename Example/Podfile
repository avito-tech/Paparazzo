source 'https://github.com/CocoaPods/Specs.git'
platform :ios, :deployment_target => '12.0'

use_frameworks!

target 'PaparazzoExample' do
  pod 'Paparazzo', :path => '../'
  pod 'Marshroute', :git => 'https://github.com/avito-tech/Marshroute.git', :tag => '1.0.1'
  pod 'ImageSource', :git => 'https://github.com/avito-tech/ImageSource.git', :tag => '4.0.0'
end

target 'PaparazzoExample_NoMarshroute' do
  pod 'Paparazzo/Core', :path => '../'
  pod 'ImageSource/Core', :git => 'https://github.com/avito-tech/ImageSource.git', :tag => '4.0.0'
  pod 'ImageSource/PHAsset', :git => 'https://github.com/avito-tech/ImageSource.git', :tag => '4.0.0'
  pod 'ImageSource/Local', :git => 'https://github.com/avito-tech/ImageSource.git', :tag => '4.0.0'
  pod 'ImageSource/Remote', :git => 'https://github.com/avito-tech/ImageSource.git', :tag => '4.0.0'
end

target 'PaparazzoExample_Storyboard' do
  pod 'Paparazzo/Core', :path => '../'
  pod 'ImageSource', :git => 'https://github.com/avito-tech/ImageSource.git', :tag => '4.0.0'
end

